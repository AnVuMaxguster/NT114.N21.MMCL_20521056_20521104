<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginVertical="@dimen/CommonFragment_VerticalMargin"
    android:layout_marginHorizontal="@dimen/CommonFragment_HorizontalMargin"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Board_Name"
            android:fontFamily="@font/nexa_heavy"
            android:textSize="@dimen/NormalTextSize"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:text="Device Name"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="@dimen/CommonFragment_VerticalMargin"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Board_ID"
            android:fontFamily="@font/nexa_heavy"
            android:textSize="@dimen/SmallTextSize"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:text="Device ID"
            android:layout_marginVertical="@dimen/CommonFragment_VerticalMargin"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/Board_Name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Board_Status"
            android:fontFamily="@font/nexa_heavy"
            android:textSize="@dimen/SmallTextSize"
            android:textAlignment="textStart"
            android:textColor="@color/alertRed"
            android:text="â€¢ Device Status"
            android:layout_marginVertical="@dimen/CommonFragment_VerticalMargin"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/Board_ID"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:id="@+id/Board_Image"/>

</LinearLayout>